{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build all",
            "type": "shell",
            "command": "make -j3 -C src/h745/Makefile/",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make clean -C src/h745/Makefile/",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "build m4",
            "type": "shell",
            "command": "make -j3 -C src/h745/Makefile/CM4",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "build m7",
            "type": "shell",
            "command": "make -j3 -C src/h745/Makefile/CM7",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "erase flash",
            "type": "shell",
            "command": "/opt/st/stm32cubeclt_1.15.0/STM32CubeProgrammer/bin/STM32_Programmer_CLI -c port=SWD mode=PowerDown -e all"
        },
        {
            "label": "probe",
            "type": "shell",
            "command": "st-info --probe"
        },
        {
            "label": "program both cores",
            "type": "shell",
            "dependsOn": "build all",
            "command": [
                "st-flash --format=ihex write src/h745/Makefile/CM4/build/stm32h745-ai_CM4.hex && st-flash --format=ihex --connect-under-reset write src/h745/Makefile/CM7/build/stm32h745-ai_CM7.hex"
            ]
        }
    ]
}