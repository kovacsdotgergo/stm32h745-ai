{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build m7 tflite",
            "type": "shell",
            "command": "make tflite -j4 -C src/h745/Makefile/CM7",
            "problemMatcher": [ "$gcc" ]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make clean -C src/h745/Makefile/",
            "problemMatcher": [ "$gcc" ]
        },
        {
            "label": "build all release",
            "dependsOn": [
                "build m7 release",
                "build m4 release"
            ],
            "problemMatcher": [ "$gcc" ]
        },
        {
            "label": "build m4 release",
            "type": "shell",
            "command": "make -j4 -C src/h745/Makefile/CM4 debug=0 |& tee src/h745/Makefile/CM4/build/last_build.log | ./scripts/colorize.sh",
            "problemMatcher": [ "$gcc" ]
        },
        {
            "label": "build m7 release",
            "type": "shell",
            "command": "make -j4 -C src/h745/Makefile/CM7 debug=0 |& tee src/h745/Makefile/CM7/build/last_build.log | ./scripts/colorize.sh",
            "problemMatcher": [ "$gcc" ]
        },
        {
            "label": "build all debug",
            "dependsOn": [
                "build m7 debug",
                "build m4 debug"
            ],
            "problemMatcher": [ "$gcc" ]
        },
        {
            "label": "build m4 debug",
            "type": "shell",
            "command": "make -j4 -C src/h745/Makefile/CM4 debug=1 |& tee src/h745/Makefile/CM4/build/last_build.log | ./scripts/colorize.sh",
            "problemMatcher": [ "$gcc" ]
        },
        {
            "label": "build m7 debug",
            "type": "shell",
            "command": "make -j4 -C src/h745/Makefile/CM7 debug=1 |& tee src/h745/Makefile/CM7/build/last_build.log | ./scripts/colorize.sh",
            "problemMatcher": [ "$gcc" ]
        },
